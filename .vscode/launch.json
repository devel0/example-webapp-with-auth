{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BACKEND",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/backend/bin/Debug/net9.0/webapi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/backend",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "FRONTEND",
            "request": "launch",
            "type": "chrome",
            "url": "https://dev-webapp-test.searchathing.local/app",
            "webRoot": "${workspaceFolder}/src/frontend",            
            "sourceMapPathOverrides": {                
                "*": "${workspaceFolder}/src/frontend/*",
            }
        }
    ]
}